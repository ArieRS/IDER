<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:weightSum="100">

    <ImageView
        android:layout_width="0dp"
        android:layout_weight="40"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/splash"/>
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="60"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:layout_marginLeft="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="vendorUserName"
            android:id="@+id/txv_vendor_username"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[Category] Vendor Display Name"
            android:id="@+id/txv_vendor_category_display_name"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vendor status..."
            android:maxLines="1"
            android:id="@+id/txv_vendor_status"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vendor location, distance meter"
            android:id="@+id/txv_vendor_location_distance"/>

        <RatingBar
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:rating="3"
            android:id="@+id/rtb_vendor_rating"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:paddingLeft="0dp"
            android:paddingTop="4dp"
            android:paddingRight="4dp"
            android:paddingBottom="4dp">

            <Button
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="wrap_content"
                android:text="Pengen"
                android:id="@+id/btn_pengen"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="wrap_content"
                android:text="Pesen!"
                android:id="@+id/btn_pesen"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>